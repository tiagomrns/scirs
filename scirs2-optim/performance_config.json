{
  "benchmarks": [
    {
      "name": "optimizer_core_benchmarks",
      "type": "cargo_bench",
      "benchmark_name": "optimizer_benchmarks",
      "features": ["simd", "parallel"],
      "release": true,
      "filter": "optimizer_performance",
      "description": "Core optimizer performance benchmarks"
    },
    {
      "name": "gpu_optimizer_benchmarks",
      "type": "cargo_bench",
      "benchmark_name": "gpu_benchmarks",
      "features": ["gpu", "simd"],
      "release": true,
      "filter": "gpu_optimization",
      "description": "GPU-accelerated optimizer benchmarks"
    },
    {
      "name": "memory_efficiency_tests",
      "type": "custom_command",
      "command": "cargo",
      "args": ["run", "--bin", "memory_leak_reporter", "--release"],
      "throughput_pattern": "([0-9.]+)\\s+MB/s",
      "description": "Memory usage and efficiency analysis"
    },
    {
      "name": "neural_architecture_search",
      "type": "cargo_bench",
      "benchmark_name": "nas_benchmarks",
      "features": ["gpu", "simd", "parallel"],
      "release": true,
      "filter": "neural_architecture",
      "description": "Neural Architecture Search performance"
    },
    {
      "name": "privacy_preserving_optimization",
      "type": "cargo_bench",
      "benchmark_name": "privacy_benchmarks",
      "features": ["crypto"],
      "release": true,
      "filter": "differential_privacy",
      "description": "Privacy-preserving optimization benchmarks"
    },
    {
      "name": "streaming_optimization",
      "type": "cargo_bench",
      "benchmark_name": "streaming_benchmarks",
      "features": ["simd", "parallel"],
      "release": true,
      "filter": "streaming",
      "description": "Real-time streaming optimization"
    }
  ],
  "thresholds": {
    "execution_time": 0.15,
    "memory_usage": 0.25,
    "throughput": -0.12,
    "peak_memory": 0.30,
    "cpu_utilization": 0.20
  },
  "historical_data": {
    "enabled": true,
    "file_path": "performance_history.json",
    "max_entries": 200,
    "retention_days": 90
  },
  "reports": {
    "output_dir": "performance_reports",
    "formats": ["json", "junit", "markdown", "html"],
    "include_charts": true,
    "compare_with_baseline": true
  },
  "ci_cd": {
    "fail_on_regression": false,
    "exit_code_on_regression": 1,
    "exit_code_on_warning": 0,
    "upload_artifacts": true,
    "notify_on_regression": true
  },
  "analysis": {
    "confidence_level": 0.95,
    "outlier_detection": true,
    "trend_analysis": true,
    "statistical_tests": ["t_test", "mann_whitney", "wilcoxon"]
  },
  "environment": {
    "required_memory_gb": 8,
    "required_cpu_cores": 4,
    "warm_up_iterations": 3,
    "measurement_iterations": 10
  },
  "notification": {
    "slack_webhook": "${SLACK_WEBHOOK_URL}",
    "email_recipients": ["${PERFORMANCE_ALERTS_EMAIL}"],
    "github_status_check": true
  }
}